{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/local/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I",
                "${workspaceFolder}/src",
                "-std=c++20"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn" : "make"
        },
        {
            "type": "shell",
            "label": "C++ build catch test",
            "command": "/usr/local/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${workspaceFolder}/tests/unit_tests.o",
                "-L",
                "${workspaceFolder}/src",
                "-l",
                "mdpsolve",                
                "-I",
                "${fileDirname}",
                "-I",
                "${workspaceFolder}/src/mdpsolve",
                "-I",
                "${workspaceFolder}",
                "-std=c++20",
                "-Wall"
                //"--coverage"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "echo",
            "type": "shell",
            "command": "echo ${workspaceFolder}"
        },
        {
            "label": "make",
            "type": "shell",
            "command": "cd src && make OS=osx"
        },
        {
            "label": "coverage",
            "type": "shell",
            "command": "cd src && gcov ${fileDirname}/${fileBasenameNoExtension}"
        }        
    ]
}